<% if params[:action] == 'search' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>

<% if @users %>
  <% if @users.size > 0 %>
    <div id="friend-lookup-results" class="well results-block col-md-10">
      <table class="search-results-table col-md-12">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><strong>Nombre: </strong> <%= user.full_name %></td>
              <td><strong>E-mail: </strong> <%= user.email %></td>
              <td>
                <strong>Perfil: </strong> <%= link_to "Ver perfil", user_path(user), class: "btn btn-xs btn-success" %>
                <% if current_user.not_friend_with?(user.id) %>
                  <%= link_to "Agregar", add_friend_path(user: current_user, friend: user), class: "btn btn-xs btn-success", method: :post %>
                <% else %>
                  <span class="label label-primary">Ya son amigos</span>
                <% end %>
              </td>
              
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>