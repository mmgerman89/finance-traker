<h2>Perfil de usuario</h2>

<dl class="dl-horizontal">
  <dt><strong>Nombre</strong></dt>
  <dd><%= @user.full_name %></dd>
  <dt><strong>E-mail</strong></dt>
  <dd><%= @user.email %></dd>
</dl>

<% if @user.stocks.size > 0 %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">Este usuario no sigue ningún stock aún</p>
<% end %>

<%= link_to "Volver", my_friends_path, class: "btn btn-primary" %>